{% extends 'base.html.twig' %}

{% block title 'Afficher une sortie'%}

{% block body %}

	<h2 style="text-align:center; margin-top: 2rem;">Afficher une sortie</h2>
	<div class="container">
		<table class="table table-striped mt-4">

			<tr>
				<td>
					<label for="name">Nom de la sortie</label>
					<input type="text" placeholder="{{ trip.name }}" style="width:100%" disabled>
				</td>
				<td>
					<label for="Campus">Campus</label>
					<br>
					<input type="text" placeholder="{{ trip.organizer.name }}" style="width: 100%" disabled>
				</td>
			</tr>

			<tr>
				<td>
					<label for="name">Date et heure de la sortie</label>
					<input type="text" placeholder="{{ trip.dateStart | format_datetime('short', locale='fr') }}" style="width:100%" disabled>
				</td>
				<td>
					<label for="ville">Ville</label>
					<input type="text" placeholder="{{ trip.tripsPlace.city.name }}" style="width:100%" disabled>
						
					</select>
				</td>
			</tr>
			<tr>
				<td>
					<label for="registerDate">Date limite d'inscription</label>
					<input type="text" placeholder="{{ trip.limitRegisterDate | date('d/m/Y') }}" style="width:100%" disabled>


				</td>
				<td>
					<label for="lieu">Lieu</label>
					<input type="text" placeholder= {{trip.tripsPlace.name}} style="width:100%" disabled>
				</td>
			</tr>

			<tr>
				<td>
					<label for="maxRegister">Nombre de places</label>
					<input type="text" placeholder="{{ trip.maxRegistrations }}" style="width:100%" disabled>
				</td>
				<td>
					<label for="rue">Rue</label>
					<br>
					<input type="text" placeholder= "{{ trip.tripsPlace.street }}" style="width: 100%" disabled>
				</td>
			</tr>


			<tr>
				<td>
					<label for="duree">Dur√©e (Minutes)</label>
					<input type="text" placeholder="{{ trip.duration}}"  style="width:100%" disabled>
				</td>
				<td>
					<label for="code_postal">Code Postal</label>
					<br>
					<input type="text" placeholder="{{trip.tripsPlace.city.postalCode}}"  style="width: 100%" disabled>
				</td>
			</tr>


			<tr>
				<td>
					<label for="infos">Description et infos</label>
					<input type="text" placeholder="{{ trip.tripInformations }}" style="width:100%; height : 6rem;" disabled>
				</td>
				<td>
					<label for="latitude">Latitude</label>
					<br>
					<input type="text"  placeholder= "{{trip.tripsPlace.latitude}}" style="width: 100%" disabled>
					<label for="Longitude">Longitude</label>
					<br>
					<input type="text" placeholder= "{{trip.tripsPlace.longitude}}" style="width: 100%" disabled>

				</td>
			</tr>


		</table>

	
		<br><br><br><br>

		<h4>
			Liste des participant inscrits :
		</h4>

		<table class="table table-striped">
			<thead>
				<th>Pseudo</th>
				<th>Nom</th>
			</thead>
			<tbody>
				{% for isSubscribed in isSubscribed %}
					<tr>
						<td>
						<b>{{isSubscribed.username | capitalize}}</b>
						</td>
						<td>
							{{isSubscribed.lastname | upper}}
							{{isSubscribed.firstname | capitalize}}
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
	<br><br><br><br>
{% endblock %}
