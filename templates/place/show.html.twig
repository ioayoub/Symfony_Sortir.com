{% extends 'base.html.twig' %}

{% block title %}Place{% endblock %}

{% block body %}
<div class="container">
    <h1>Place</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ place.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ place.name }}</td>
            </tr>
            <tr>
                <th>Street</th>
                <td>{{ place.street }}</td>
            </tr>
            <tr>
                <th>Latitude</th>
                <td>{{ place.latitude }}</td>
            </tr>
            <tr>
                <th>Longitude</th>
                <td>{{ place.longitude }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_place') }}">back to list</a>

    <a href="{{ path('place_edit', {'id': place.id}) }}" class="btn btn-primary">edit</a>

    {{ include('place/_delete_form.html.twig') }}
</div>
{% endblock %}
