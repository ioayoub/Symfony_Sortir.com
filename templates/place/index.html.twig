{% extends 'base.html.twig' %}

{% block title %}Place index{% endblock %}

{% block body %}
<div class="container">
    <h1>Liste des lieux</h1>

    <table class="table mt-4">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Rue</th>
                <th>Latitude</th>
                <th>Longitude</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for place in places %}
            <tr>
                <td>{{ place.id }}</td>
                <td>{{ place.name }}</td>
                <td>{{ place.street }}</td>
                <td>{{ place.latitude }}</td>
                <td>{{ place.longitude }}</td>
                <td>
                    <a href="{{ path('place_show', {'id': place.id}) }}" class="btn btn-info">Afficher</a>
                    <a href="{{ path('place_edit', {'id': place.id}) }}" class="btn btn-primary">Editer</a>
                    <a href="{{ path('place_delete', {'id': place.id}) }}" class="btn btn-danger">Supprimer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('place_new') }}" class="btn btn-success">Cr√©er un nouveau lieu</a>
    </div>
{% endblock %}
